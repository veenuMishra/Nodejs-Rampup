
extends layout

block content
	div.container(style='margin:20px')
		table.table.table-bordered.table-striped
			thead
				tr
					th(style='width:40px') #
					th(style='width:180px') Name
					th(style='width:200px') email
					th(style='width:180px') location
					th(style='width:180px') Username
					th(style='width:180px') Created On
					th(style='width:180px') Updated On
					
			tbody
			- for (var i = 0; i < accts.length; i++)
				tr
					td= i+1
					td= accts[i].name
					td= accts[i].email
					td= accts[i].location
					td= accts[i].username
					td= accts[i].created_at
					td= accts[i].updated_at

